{
	"name": "backend",
	"type": "module",
	"exports": "./src/client.ts",
	"scripts": {
		"check": "tsc --noEmit",
		"dev": "wrangler dev",
		"deploy": "wrangler deploy --minify",
		"cf:typegen": "wrangler types --env-interface CloudflareBindings",
		"db:gen": "bunx @better-auth/cli generate --yes --config src/auth/index.ts --output src/auth/schema.ts && drizzle-kit generate",
		"db:migrate": "wrangler d1 migrations apply DB --remote",
		"db:migrate-dev": "wrangler d1 migrations apply DB",
		"format": "prettier . --write"
	},
	"dependencies": {
		"@hono/zod-validator": "^0.7.4",
		"@libsql/client": "^0.15.15",
		"@paralleldrive/cuid2": "^3.1.0",
		"better-auth": "^1.3.32",
		"drizzle-orm": "^0.44.6",
		"hono": "^4.10.1",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@ianvs/prettier-plugin-sort-imports": "^4.7.0",
		"@types/node": "^24.9.1",
		"drizzle-kit": "^0.31.5",
		"prettier": "^3.6.2",
		"shared-prettier-config": "workspace:*",
		"typescript": "^5.9.3",
		"wrangler": "^4.45.0"
	}
}
